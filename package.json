{
  "name": "ywh",
  "version": "2.2.4",
  "description": "YwH program to create stories using Gemini AI and convert them to speech using TTS.",
  "main": "./out/main/index.js",
  "author": "Oleg",
  "homepage": "https://github.com/mewqwem/story-maker-source",
  "scripts": {
    "format": "prettier --write .",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "start": "electron-vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.7.9",
    "bufferutil": "^4.1.0",
    "dotenv": "^16.4.7",
    "electron-log": "^5.2.4",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.9",
    "fs-extra": "^11.2.0",
    "node-edge-tts": "^1.2.9",
    "utf-8-validate": "^6.0.6"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "prettier": "^3.4.2",
    "vite": "^5.4.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mewqwem/story-maker-source"
  },
  "build": {
    "appId": "com.oleg.storygen",
    "productName": "YwH",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "out/**/*",
      "!**/*.map"
    ],
    "publish": {
      "provider": "github",
      "owner": "mewqwem",
      "repo": "story-maker-source"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false,
      "shortcutName": "StoryMaker"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns",
      "artifactName": "${productName}-${version}-mac.${ext}"
    }
  }
}
